systemLog:
  destination: file
  path: {{ mongo_base_dir }}/mongos/logs/mongos.log
  logAppend: true

net:
  port: {{ mongos_port }}
  bindIp: {{ hostvars[inventory_hostname]['ansible_host'] }}
  tls:
    mode: requireTLS
    certificateKeyFile: {{ vault_dir }}/secrets/mongo/mongodb-{{ hostvars[inventory_hostname]['ansible_host'] }}.pem
    CAFile: {{ vault_dir }}/authorities/ca.pem
    allowConnectionsWithoutCertificates: false
    allowInvalidCertificates: false

sharding:
  configDB: {{ config_repl_set_name }}/{{ config_server_hosts | join(',') }}

security:
  clusterAuthMode: x509

setParameter:
  authenticationMechanisms: "SCRAM-SHA-256,MONGODB-X509"

processManagement:
  pidFilePath: "{{ mongo_base_dir }}/mongos/logs/mongos.pid"
  