storage:
  dbPath: {{ mongo_base_dir }}/shard/data

systemLog:
  destination: file
  path: {{ mongo_base_dir }}/shard/logs/mongod.log
  logAppend: true

net:
  port: {{ shard_port }}
  bindIp: 0.0.0.0
  tls:
    mode: requireTLS
    certificateKeyFile: {{ mongo_base_dir }}/certs/secrets/mongodb.pem
    CAFile: {{ mongo_base_dir }}/certs/ca.pem
    allowConnectionsWithoutCertificates: false
    allowInvalidCertificates: false

replication:
  replSetName: "{{ repl_set_name }}"
  
sharding:
  clusterRole: "{{ cluster_role }}"

security:
  authorization: disabled

processManagement:
  fork: true
  pidFilePath: {{ mongo_base_dir }}/shard/logs/mongod.pid

