pid_file = "{{ vault_dir }}/agents/mongo/config-client/mongo-config-client-vault-agent.pid"

vault {
  address = "https://{{ vault_ip }}:{{ hashi_vault_port }}"
  ca_cert = "{{ vault_dir }}/authorities/ca.pem"
}

auto_auth {
  method "approle" {
    config = {
      role_id_file_path = "{{ vault_dir }}/secrets/mongo/config-client/role_id"
      secret_id_file_path = "{{ vault_dir }}/secrets/mongo/config-client/secret_id"
      remove_secret_id_file_after_reading = true
    }
  }
  sink "file" {
    config = {
      path = "{{ vault_dir }}/secrets/mongo/config-client/.vault-token"
    }
  }
}

template {
  source      = "{{ vault_dir }}/templates/mongo/config-client/mongo-config-client-10.{{ mongo_config_subnet }}.0.{{ ansible_host.split('.')[-1] }}.pem.ctmpl"
  destination = "{{ vault_dir }}/secrets/mongo/config-client/mongo-config-client-10.{{ mongo_config_subnet }}.0.{{ ansible_host.split('.')[-1] }}.pem"
  perms       = 0600
}

